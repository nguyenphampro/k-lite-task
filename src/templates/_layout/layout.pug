include ../_include/_variables
doctype html

html(dir='ltr', lang=config.SEO.seo_lang, itemscope, itemtype="http://schema.org/WebSite", prefix="og: http://ogp.me/ns#", class="no-js")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='format-detection', content='telephone=no')
		meta(name='msapplication-tap-highlight', content='no')
		<!-- ////////////// Mobile title color ////////////// -->
		meta(name='theme-color', content=config.SEO.mobile_color)
		meta(name='msapplication-navbutton-color', content=config.SEO.mobile_color)
		meta(name='apple-mobile-web-app-status-bar-style', content=config.SEO.mobile_color)
		title #{title || AppName} - #{config.SEO.cfg_name}
		if process.argv.slice(3).indexOf('--production') > -1
			include ../_include/_seo
		block og
		<!-- ////////////// CSS Include ////////////// -->
		include ../_include/_css
		block css
		<!-- ////////////// FAVICON ////////////// -->
		if process.argv.slice(3).indexOf('--production') > -1
			link(rel='apple-touch-icon', sizes='180x180', href=config.favicondist+'apple-touch-icon.png')
			link(rel='icon', type='image/png', href=config.favicondist+'favicon-32x32.png', sizes='32x32')
			link(rel='icon', type='image/png', href=config.favicondist+'favicon-16x16.png', sizes='16x16')
			link(rel='manifest', href=config.favicondist+'manifest.json')
			link(rel='mask-icon', href=config.favicondist+'safari-pinned-tab.svg', color='#5bbad5')
			link(rel='shortcut icon', href=config.favicondist+'favicon.ico')
			meta(name='msapplication-TileColor', content=config.SEO.mobile_color)
			meta(name='msapplication-TileImage', content=config.favicondist+'mstile-144x144.png')
			meta(name='msapplication-config', content=config.favicondist+'browserconfig.xml')
			meta(name='theme-color', content='#ffffff')
	body#top-page(class=prefix+bodyclass+'-page' || 'default'+_dataJS.config.VIENSOI_APP.DEV_MODE ? 'viensoi-develop': '')
		if _dataJS.config.VIENSOI_APP.DEV_MODE && (process.argv.slice(3).indexOf('--production') < 0)
			include dev
		<!-- ////////////// Header ////////////// -->
		if _dataJS.config.VIENSOI_APP.ACTIVE_OFFCANVAS
			include header-offcanvas
		else
			include header
		<!-- ////////////// End Header ////////////// -->
		<!-- ////////////// Begin Main ////////////// -->
		main
			block body
		<!-- ////////////// End Main ////////////// -->
		<!-- ////////////// Footer ////////////// -->
		include footer
		<!-- ////////////// End Footer ////////////// -->
		<!-- ////////////// Back to Top ////////////// -->
		a(href="#top-page", id="back-to-top", title="Back to top")
			span TOP
			i.fa.fa-angle-up
		<!-- ////////////// Javascript Include ////////////// -->
		include ../_include/_script
		block js

